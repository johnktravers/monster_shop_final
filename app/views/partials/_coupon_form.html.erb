<%= form_tag path, method: method do %>
  <section class='form-group form-width'>
    <p>
      <%= label_tag :name %>
      <%= text_field_tag :name, name, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag 'Percent Discount' %>
      <%= number_field_tag :percent_off, percent_off, class: 'form-control', step: 1 %>
    </p>

    <p>
      <%= label_tag 'Dollar Discount' %>
      <%= number_field_tag :dollar_off, dollar_off, class: 'form-control', step: 0.01 %>
    </p>

    <p class='justify-content-center row'>
      <%= submit_tag button_text, class: 'btn btn-primary mt-2' %>
    </p>
  </section>
<% end %>
